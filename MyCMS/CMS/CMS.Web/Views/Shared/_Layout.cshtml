<!DOCTYPE html>
<html ng-app="MainApp">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @RenderSection("css", required: false);
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="../" class="navbar-brand">客戶管理系統</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/">訂單狀況</a>
                    </li>
                    <li>
                        <a href="/Customer">客戶管理</a>
                    </li>
                    <li>
                        <a href="/Help/">API</a>
                    </li>
                    <li>
                        <a href="/Language/">多國語言</a>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">訂單&報表管理<span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="download">
                            <li>
                                <a href="/Order/">訂單列表</a>
                            </li>
                            <li>
                                <a href="/Order/ExportByDocx">匯出Word(DocX套件)</a>
                            </li>
                            <li>
                                <a href="/Order/UploadOrder">讀取Excel(NPOI套件)</a>
                            </li>
                            <li>
                                <a href="/Order/ExportExcelByNPOI">匯出Excel(NPOI套件)</a>
                            </li>
                        </ul>
                    </li>
                </ul>

                @Html.MvcSiteMap().Menu("BootstrapMenuHelperModel", false)

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Login/LogOut">登出</a></li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script src="~/signalr/hubs/"></script>

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="~/App/app.js"></script>
</body>
</html>
